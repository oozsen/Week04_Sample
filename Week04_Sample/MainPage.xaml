<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week04_Sample.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Frame BackgroundColor="HotPink" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="{Binding Hello}" FontSize="Title" Padding="30,10,30,10" />
        <Label Text="{Binding Hello2}" FontSize="16" Padding="30,0,30,0" />
        <Entry Text="{Binding CengLink}" />

        <Button x:Name="btnClick" Text="Click me"
                Clicked="btnClick_Clicked"
                HorizontalOptions="Center" />

        <Button x:Name="btnClose" Text="Close App"
                Clicked="btnClose_Clicked"
                HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
